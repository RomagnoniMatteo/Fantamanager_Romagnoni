<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SulMercato">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OFFERTE DAL MERCATO"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="@color/blu"
        android:textColor="@color/white"
        android:padding="10dp"/>


<androidx.recyclerview.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"/>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I TUOI GIOCATORI"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="@color/blu"
        android:textColor="@color/white"
        android:padding="10dp"/>
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="20dp"
                android:orientation="horizontal"
                >



                <TextView
                    android:background="@color/bluchiaro"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="SUL MERCATO"
                    android:textColor="@color/white"
                    />





            </LinearLayout>

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="@color/white"
                android:orientation="horizontal"
                >



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/bluchiaro"
                        android:layout_margin="5dp"
                        android:text="AGGIUNGI"/>


                </LinearLayout>










            </LinearLayout>

    </LinearLayout>

</ScrollView>